{{> header}}

<div class="jumbotron text-center">
  <div class="overlay">
  </div>
  <div class="background-image">
  </div>
  <div class="caption">
    <h1>Mongo Scraper</h1>
    <p>New York Times Edition</p>
  </div>
</div>
<div class="container-fluid article-container">
  {{#each articles}}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3>
          <a class="article-link" target="_blank" href={{link}}>
            {{heading}}
          </a>
          <a class="btn btn-success save" data-id={{_id}}>
            Save Article
          </a>
        </h3>
      </div>
      <div class="panel-body">
        {{summary}}
      </div>
    </div>
  {{/each}}
</div>
{{> footer }}
<script src="/javascripts/index.js" type="text/javascript"></script>